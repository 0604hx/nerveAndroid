<?xml version="1.0" encoding="utf-8"?>
<!-- 这里使用到自定义的对话框中，圆角 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
		   <!-- 颜色渐变，angle 为渐变的方向 -->
		   <gradient android:angle="90" android:endColor="#2395DD" android:startColor="#195AA6" />
		   <stroke android:width="0.8dp" android:color="#3366CC"/>
		   <padding android:left="10dp" android:right="10dp" android:top="6dp" android:bottom="6dp"/>
		   <corners android:radius="6dp"/>
		</shape>
    </item>
    
    <item android:state_focused="true">
        <shape android:shape="rectangle">
		   <!-- 颜色渐变，angle 为渐变的方向 -->
		   <gradient android:angle="90" android:endColor="#ffffff" android:startColor="#D6D7D6" />
		   <stroke android:width="0.8dp" android:color="#a50102"/>
		   <padding android:left="10dp" android:right="10dp" android:top="6dp" android:bottom="6dp"/>
		   <corners android:radius="6dp"/>
		</shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
		   <!-- 颜色渐变，angle 为渐变的方向 -->
		   <gradient android:angle="90" android:endColor="#ffffff" android:startColor="#808080" />
		   <stroke android:width="0.8dp" android:color="#9C9A9C"/>
		   <padding android:left="15dp" android:right="15dp" android:top="8dp" android:bottom="8dp"/>
		   <corners android:radius="6dp"/>
		</shape>
    </item>
</selector>