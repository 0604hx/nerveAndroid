<?xml version="1.0" encoding="utf-8"?>
<!-- 这里使用到自定义的对话框中，圆角 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
   android:shape="rectangle">
   
    <stroke android:width="1dp" android:color="#102560"/>
    
   <!-- 颜色渐变，angle 为渐变的方向 ，黑色 #293029" 》#4A5152 ，边框：#293029 -->
   <gradient
        android:angle="90"
        android:endColor="#015093"
        android:startColor="#014481" />
   
  <corners android:radius="4dp"></corners>
</shape>